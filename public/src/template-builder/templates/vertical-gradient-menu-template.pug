extends ../base

//- Template customization
//------------------------
block templateConfig
	- var templateCustom = "vertical-layout page-header-light vertical-menu-collapsible vertical-gradient-menu"
	- var dataMenu = "vertical-gradient-menu"
	- var dataColor = ""

//- Page level customization
//------------------------
block pageConfig
	- var logoType = 'light'

block navbarConfig
	- var navbarPosition = "navbar-fixed"
	- var navbarColor = "navbar-light"
	- var navbarShadow = false

block verticalMenuConfig
	- var menuColor = "sidenav-dark gradient-45deg-deep-purple-blue sidenav-gradient sidenav-active-rounded"
	- var menuType = "sidenav-fixed"
	- var menuOpenType = "menu-accordion"
	- var menuShadow = true
	- var menuCollapsed = false

block footerConfig
	- var footerType = "footer-static"
	- var footerColor = "footer-light"
	- var footerShadow = true
	- var footerBorder = true

//- Template includes
//-------------------

block header
	- var headerBGColor = "blue-grey lighten-5"
	- var contentHeader = false
	- var contentBreadcrumbs = true
		
	include sections/header/vertical-menu-header

block main-menu
	include sections/menu/vertical-menu

block page-header
	if blankPage != true
		include ../pages/page-headers/vertical-gradient-menu-template-breadcrumbs

block footer
	include sections/footer/collapsible-menu-footer

