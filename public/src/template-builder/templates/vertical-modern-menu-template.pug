extends ../base

//- Template customization
//------------------------
block templateConfig
	- var templateCustom = "vertical-layout vertical-menu-collapsible page-header-dark vertical-modern-menu"
	- var dataMenu = "vertical-modern-menu"
	- var dataColor = "" 

//- Page level customization
//------------------------
block pageConfig
	- var logoType = 'dark'

block navbarConfig
	- var navbarPosition = "navbar-fixed"
	- var navbarColor = "navbar-dark gradient-45deg-indigo-purple no-shadow"
	- var navbarShadow = false

block verticalMenuConfig
	- var menuType = "sidenav-fixed"
	- var menuColor = "sidenav-light sidenav-active-square"
	- var menuOpenType = "menu-accordion"
	- var menuShadow = true
	- var menuCollapsed = false

block footerConfig
	- var footerType = "footer-static footer-dark"
	- var footerColor = "gradient-45deg-indigo-purple gradient-shadow"
	- var footerShadow = true
	- var footerBorder = true

//- Template includes
//-------------------

block header
	- var headerBGColor = "gradient-45deg-indigo-purple"
	- var contentHeader = true
	- var contentBreadcrumbs = true

	include sections/header/vertical-menu-header

block main-menu
	include sections/menu/vertical-menu

block page-header
	if blankPage != true
		include ../pages/page-headers/vertical-modern-menu-template-breadcrumbs

block footer
	include sections/footer/collapsible-menu-footer

//- Template specific dependency
//------------------------------

//- Vendor CSS
//------------------------------
//- Add Vendor specific CSS
block vendorcss

//- Page CSS
//------------------------------

//- Add custom page specific CSS
block pagecss	
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/themes/'+myThemeName+'/materialize.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css'+rtl+'/themes/'+myThemeName+'/style.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
block vendorjs

//- Page JS
//------------------------------
//- Add custom page specific JS
block pagejs
