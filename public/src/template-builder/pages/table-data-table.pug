extends template

block pageVars
	- var pageTitle = "DataTable"
	- var pageSubTitle = ""
	- var description = "The standard font Material Design uses is Roboto. We have included the font files with our framework."
	- var activeParentMenu = "table-data-table"
	- var activeMenu = "table-data-table"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"}, {url:"#",name:"Table"}, {name:"DataTable"}])

//- Include page content in page block
append content
	include ../contents/table-data.html
	include ../contents/sidebar/right-sidebar.html
	include ../contents/sidebar/fab-menu.html

//- Vendor css
//- Add vendor specific CSS
append vendorcss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/flag-icon/css/flag-icon.min.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/data-tables/css/jquery.dataTables.min.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/data-tables/extensions/responsive/css/responsive.dataTables.min.css')
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/data-tables/css/select.dataTables.min.css')

//- Vendor JS
//------------------------------
//- Add vendor specific JS
append vendorjs
	script(src=app_assets_path + '/vendors/data-tables/js/jquery.dataTables.min.js')
	script(src=app_assets_path + '/vendors/data-tables/extensions/responsive/js/dataTables.responsive.min.js')
	script(src=app_assets_path + '/vendors/data-tables/js/dataTables.select.min.js')

//- Page JS
//------------------------------
//- Add custom page specific JS
append pagejs
	script(src=app_assets_path + '/js/scripts/data-tables.js')

//- Page css
//- Add page specific CSS
append pagecss
	link(rel='stylesheet', type='text/css', href=app_assets_path + '/css/pages/data-tables.css')